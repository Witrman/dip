<Window x:Class="Media_Editor_1._0._2.PhotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Editor_1._0._2"
        mc:Ignorable="d" 
        Title="Window1" Height="600" Width="1000" Background="#FF686565" WindowState="Maximized">
    <Grid Background="#FFB4B4B4">
        <Menu Height="18" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="MenuItem_Click" ></MenuItem>
                <MenuItem Header="Сохранить" ></MenuItem>
                <Separator />
                <MenuItem Header="Выход" Click="MenuItem_Click_1" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Редактировать" ></MenuItem>
            <MenuItem Header="Справка" ></MenuItem>
        </Menu>
        <ScrollViewer x:Name="scrollViewer" Margin="78,55,54,46"   HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MouseWheel="scrollViewer_MouseWheel" Background="#FFDADADA">
            <Image Name="photoImage" Height="467.374" Width="675.998" Source="png.png" MinWidth="300" MinHeight="293" ScrollViewer.VerticalScrollBarVisibility="Disabled" UseLayoutRounding="False"/>
        </ScrollViewer>
        <Slider x:Name="sliderZoom" Margin="0,0,32,21" ValueChanged="Slider_ValueChanged" Minimum="30" Maximum="1000" Value="100" LargeChange="0" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}" HorizontalAlignment="Right" Width="308" Height="20" VerticalAlignment="Bottom"/>
        <Button Content="Кисть" HorizontalAlignment="Left" Margin="17,55,0,0" VerticalAlignment="Top" Width="44" Height="44" Click="Button_Click"/>
        <Button Content="Заливка" HorizontalAlignment="Left" Margin="17,104,0,0" VerticalAlignment="Top" Width="44" Height="44"/>
        <Button Content="ещечтото" HorizontalAlignment="Left" Margin="17,153,0,0" VerticalAlignment="Top" Width="44" Height="44"/>
        <Label Name="lbl" Content="Label" HorizontalAlignment="Left" Margin="78,0,0,0" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
